{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "gitlab>gitlab-com/gl-infra/common-ci-tasks:renovate-common",
    "gitlab>gitlab-com/gl-infra/platform/runway/runwayctl:renovate-runway",
    ":semanticCommitTypeAll(chore)"
  ],
  "reviewersFromCodeOwners": false,
  "reviewersSampleSize": 2,
  "additionalReviewers": [
    "achueshev",
    "bcardoso-",
    "eduardobonet",
    "igor.drozdov",
    "shinya.maeda",
    "stanhu",
    "tle_gitlab"
  ],
  "ignoreDeps": ["errata-ai/vale", "DavidAnson/markdownlint-cli2", "markdownlint-cli2", "node", "ruby"],
  "packageRules": [
    {
      "matchPackageNames": ["isort"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ]
}
